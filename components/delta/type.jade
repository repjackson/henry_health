template(name='types') 
    .ui.stackable.padded.grid
        .four.wide.column
            h1.ui.center.aligned.header 
                i.icon(class=icon)
                |types
            #add_type.ui.icon.circular.button
                i.green.plus.icon
            +cloud filter='type'
        .twelve.wide.column 
            .ui.centered.cards
                each types
                    +type
                    
                
template(name='type')
    .ui.card
        .content
            .header 
                i.icon(class=icon)
                |#{title}
            .description
                +text_view key='slug'
            a.ui.icon.circular.button(href="/type/edit/#{_id}") 
                i.pencil.icon
            a.ui.icon.circular.button(href="/t/#{slug}") 
                i.right.arrow.icon
