template(name='forgot_password')
    .ui.padded.stackable.grid
        .centered.row
            .fifteen.wide.column
                img.ui.centered.image(src="{{c.url 'henry_logo'}}")
                .ui.center.aligned.grey.header
                    i.refresh.icon
                    |Forgot Password 
                if message
                    h4.ui.center.aligned.header #{message}
                .ui.placeholder.segment
                    .ui.two.column.stackable.grid
                        .column
                            .ui.form
                                .field
                                    label Username
                                    .ui.left.icon.input(class=login_class)
                                        input.username(type='text')
                                        i.user.icon
                                    .ui.hhblue.submit.button.submit_username Submit
                        .middle.aligned.column
                            .ui.form
                                .field
                                    label Email
                                    .ui.left.icon.input
                                        input.email(type='email')
                                        i.envelope.icon
                                    .ui.hhblue.submit.button.submit_email Submit
                    .ui.vertical.divider
                        | Or
                if username
                    if logging_in
                        .ui.fluid.large.hhblue.circular.button.enter(title="Login #{username}" class=enter_class)
                            |Login '#{username}'
                            i.right.arrow.icon
                    else
                        .ui.center.aligned.secondary.segment
                            .ui.small.grey.header Username "#{username}" not found
                            a(href='/register') Register
                .ui.center.aligned.basic.segment    
                    a.ui.circular.large.basic.button(href='/login') 
                        i.sign.in.icon
                        |Login
                        
                .ui.center.aligned.basic.segment    
                    .ui.small.header If you don't have an account 
                    a.ui.circular.large.basic.button(href='/register_therapist')
                         i.plus.square.icon
                         | Register as a Therapist
                    a.ui.circular.large.basic.button(href='/register')
                         i.user.icon
                         |Register as a Client


template(name='reset_password')
    .ui.padded.stackable.grid
        .centered.row
            .fifteen.wide.column
                img.ui.centered.image(src="{{c.url 'henry_logo'}}")
                .ui.center.aligned.grey.header
                    i.refresh.icon
                    |Reset Password 
                form#reset_password_form.ui.form
                    .field
                        label Password
                        .ui.left.icon.input
                            input.password1(type='password')
                            i.lock.icon
                    .field
                        label Password Again
                        .ui.left.icon.input
                            input.password2(type='password')
                            i.lock.icon
                    button.ui.hhblue.submit.button(type='submit') Submit
